<% (@post = Post.new).errors.full_messages.each do |e| %>
	<p class="alert alert-danger animated flipInX"><%= e %></p>
<% end %>
<%= form_for(@post, html: {class: 'row well'}) do |f| %>

	<%= f.text_field :label, class: ' col-md-4', placeholder: 'Label' %>
	<%= f.text_field :link, class: ' col-md-4 col-md-offset-1', placeholder: 'URL' %>
	<%= f.submit "Create Link!", class: 'btn btn-primary col-md-2 col-md-offset-1' %>
<% end %>
<script>
	setTimeout(function(){
		$('.alert').slideUp();
	},5000);
</script>
<%= render 'posts/index' %>
