

<div class="row">
  <%= form_for(:session, url: login_path, html: {class: 'login-form col-md-6 col-md-offset-3'}) do |f| %>
    <div class="form-group">
      <%= f.text_field :email, class: "form-control login-field", placeholder: "Enter your email" %>
      <label class="login-field-icon"><i class="fa fa-envelope fa-lg"></i></label>
    </div>

    <div class="form-group">
      <%= f.password_field :password, class: "form-control login-field", placeholder: "Password" %>
      <label class="login-field-icon"><i class="fa fa-key fa-lg"></i></label>
    </div>

	<div class="form-group">
	    <%=f.submit "Log in", class: "btn btn-primary" %>
	    <a class="login-link pull-right" href="#">Lost your password?</a>
  </div>
<% end %>
  </div>
