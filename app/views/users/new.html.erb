<div class="row">
	<h2 class="text-center">Sign Up</h2>
	<div class="col-md-6 col-md-offset-3">
	<%= form_for(@user, html:{class: 'login-form'}) do |f| %>
	<div class="form-group">
		<label class="login-field-icon"><i class="fa fa-user fa-lg"></i></label>
		<%= f.text_field :name, class: 'form-control login-field', placeholder: 'Name' %>
	</div>
	<div class="form-group">
	<label class="login-field-icon"><i class="fa fa-envelope fa-lg"></i></label>
		<%= f.email_field :email, class: 'form-control login-field', placeholder: 'Email' %>
	</div>
	<div class="form-group">
	<label class="login-field-icon"><i class="fa fa-lock fa-lg"></i></label>
		<%= f.password_field :password, class: 'form-control login-field', placeholder: 'Password' %>
	</div>
	<div class="form-group">
	<label class="login-field-icon"><i class="fa fa-key fa-lg"></i></label>
		<%= f.password_field :password_confirmation, class: 'form-control login-field', placeholder: 'Confirm Password' %>
	</div>
	<div class="form-group">
		<%= f.submit "Sign Up", class: 'btn btn-primary btn-lg btn-block' %>
	</div>
	<% end %>
	</div>
</div>


